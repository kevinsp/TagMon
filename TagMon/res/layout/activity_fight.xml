<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper2"
    tools:context="de.hsauxinf.tagmon.Fight">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageView
            android:id="@+id/enemyImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/tableLayout"
            android:layout_below="@+id/gridLayout" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:stretchColumns="0,1,2,3">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/chooseAttack"
                    android:layout_height="wrap_content"
                    android:onClick="onBtnClicked"
                    android:text="@string/attack" />

                <Button android:layout_height="wrap_content"

                    />

                <Button
                    android:id="@+id/openInventory"
                    android:layout_height="wrap_content"
                    android:onClick="onBtnClicked"
                    android:text="@string/inventory" />

                <Button
                    android:id="@+id/tryToEscape"
                    android:layout_height="wrap_content"
                    android:onClick="onBtnClicked"
                    android:text="@string/escape" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/dmg_dealt_to_enemy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="@dimen/text_size" />


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:columnCount="2"
            android:gravity="center">

            <TextView
                android:id="@+id/enemyLevel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_rowSpan="2"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/enemyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/enemyHealthBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/health_bar" />

                <TextView
                    android:id="@+id/enemyHealthBarNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/enemyHealthBar"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </GridLayout>


        <GridLayout
            android:id="@+id/ownGridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tableLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:columnCount="2"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0">

                <TextView
                    android:id="@+id/ownName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/ownLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/ownName"
                    android:textSize="@dimen/text_size" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2">

                <ProgressBar
                    android:id="@+id/ownHealthBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:progressDrawable="@drawable/health_bar" />

                <TextView
                    android:id="@+id/ownHealthBarNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ownHealthBar"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </GridLayout>


    </RelativeLayout>

</FrameLayout>
