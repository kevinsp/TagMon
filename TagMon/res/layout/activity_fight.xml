        <TextView
            android:id="@+id/dmg_dealt_to_enemy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="@dimen/text_size" />


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:columnCount="3"
            android:gravity="center"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0">
                <TextView
                    android:id="@+id/enemyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size" />

             </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2">

                <ProgressBar
                    android:id="@+id/enemyHealthBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:progressDrawable="@drawable/health_bar" />

                <TextView
                    android:id="@+id/enemyHealthBarNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/enemyHealthBar"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                >
                <RelativeLayout
                    android:id="@+id/enemy"
                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >

                    <ImageView
                        android:id="@+id/enemyLeftLegBack"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:src="@drawable/leg_l_dino"
                        android:layout_marginLeft="12dp"

                        />

                    <ImageView
                        android:id="@+id/enemyRightLegBack"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="144dp"
                        android:src="@drawable/leg_r_dino"
                        />

                    <ImageView
                        android:id="@+id/enemyBody"
                        android:layout_width="334dp"
                        android:layout_height="180dp"
                        android:src="@drawable/body_dino"

                        />

                    <ImageView
                        android:id="@+id/enemyHead"
                        android:layout_width="104dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/head_dino"
                        />

                    <ImageView
                        android:id="@+id/enemyLeftLegFront"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:src="@drawable/leg_l_dino"
                        android:layout_marginLeft="28dp"

                        />


                    <ImageView
                        android:id="@+id/enemyRightLegFront"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="160dp"
                        android:src="@drawable/leg_r_dino"
                        />
                </RelativeLayout>
            </RelativeLayout>


        </GridLayout>





        <GridLayout
            android:id="@+id/ownGridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0">

                <ImageView
                    android:id="@+id/ownImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1">

                <TextView
                    android:id="@+id/ownName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:textSize="@dimen/text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2">

                <ProgressBar
                    android:id="@+id/ownHealthBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:progressDrawable="@drawable/health_bar" />

                <TextView
                    android:id="@+id/ownHealthBarNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ownHealthBar"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>


        </GridLayout>

</RelativeLayout>
